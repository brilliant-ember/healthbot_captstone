<?xml version="1.0" ?>

<robot name="healthbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find healthbot)/urdf/gazebo.xacro" />
  <xacro:include filename="$(find healthbot)/urdf/transmission.xacro" />

  <xacro:property name="wheel_radius" value="0.2"/>

  <!-- Root link -->
