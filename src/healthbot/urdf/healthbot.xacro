  <joint name="healthbot__left_wheel_hinge" type="revolute">
    <parent link="healthbot__chassis"/>
    <child link="healthbot__left_wheel"/>
    <origin xyz="0.79999 0.505   0.12499" rpy="4.40000e-04 1.57070e+00 1.57114e+00"/>
    <axis xyz="9.e-05 9.e-05 1.e+00"/>
    <limit lower="-1e+16" upper="1e+16" effort="-1.0" velocity="-1.0"/>
  </joint>

  <joint name="healthbot__right_wheel_hinge" type="revolute">
    <parent link="healthbot__chassis"/>
    <child link="healthbot__right_wheel"/>
    <origin xyz="0.8   -0.505  0.125" rpy="4.40000e-04 1.57070e+00 1.57114e+00"/>
    <axis xyz="9.e-05 9.e-05 1.e+00"/>
    <limit lower="-1e+16" upper="1e+16" effort="-1.0" velocity="-1.0"/>
  </joint>
  <link name="healthbot__chassis">
    <inertial>
      <mass value="20"/>
      <origin xyz="-0.1  0  -0.1" rpy="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="1" iyz="0" izz="0.1"/>
    </inertial>
    <collision name="healthbot__caster_collision">
      <origin xyz="-0.8    0     0.125" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.125"/>
      </geometry>
    </collision>
    <collision name="healthbot__collision">
      <origin xyz="0   0   0.25" rpy="0 0 0"/>
      <geometry>
        <box size="2 1 0.3"/>
      </geometry>
    </collision>
    <visual name="healthbot__caster_visual">
      <origin xyz="-0.8    0     0.125" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.125"/>
      </geometry>
    </visual>
    <visual name="healthbot__visual">
      <origin xyz="0   0   0.25" rpy="0 0 0"/>
      <geometry>
        <box size="2 1 0.3"/>
      </geometry>
    </visual>
  </link>

  <link name="healthbot__left_wheel">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <collision>
      <origin xyz="0   0   0.03" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="0.05"/>
      </geometry>
    </collision>
    <visual >
      <origin xyz="0   0   0.03" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="0.05"/>
      </geometry>
    </visual>
  </link>
