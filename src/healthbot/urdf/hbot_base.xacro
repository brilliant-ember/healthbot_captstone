<?xml version="1.0"?>
<robot name="hbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Chassis vars -->
<xacro:property name="chassis_xyz" value="0.0 0.0 0.1"/>
<xacro:property name="chassis_rpy" value="0.0 0.0 0.0"/>
<xacro:property name="chassis_visual_xyz" value="0.0 0.0 0.0"/>

<!-- Caster wheel vars -->
<xacro:property name="caster_xyz" value="0.35 0.0 -0.05"/>
<xacro:property name="caster_rpy" value="0 0 0"/>
<xacro:property name="castor_wheel_size" value="0.06"/>
<xacro:property name="visual_caster_xyz" value="0.2 0.0 -0.05"/>

<!-- Side wheels -->
<xacro:property name="side_wheel_length" value="0.04"/>
<xacro:property name="side_wheel_radius" value="0.1"/>
<xacro:property name="side_wheel_mass" value="0.2"/>
<xacro:property name="axis_xyz" value="0 1 0"/>
<xacro:property name="axis_rpy" value="0 0 0"/>

<!-- Right wheel info -->
<xacro:property name="right_xyz" value="0 0 0"/>
<xacro:property name="right_rpy" value="0 1.57 1.57"/>
<xacro:property name="joint_right_xpy" value="-0.05 0.15 0.0"/>
<xacro:property name="joint_right_rpy" value="0 0 0"/>

<!-- Left wheel info -->
<xacro:property name="left_xyz" value="0 0 0"/>
<xacro:property name="left_rpy" value="0 1.57 1.57"/>
<xacro:property name="joint_left_xpy" value="-0.05 -0.15 0.0"/>
<xacro:property name="joint_left_rpy" value="0.0 0.0 0.0"/>



<!-- imports -->
<xacro:include filename="$(find healthbot)/urdf/rviz_materials.xacro" />

<!-- Root link -->
  <link name="world"/>
  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="chassis"/>
  </joint>

<!-- Chassis and front wheel -->
  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <origin xyz="${chassis_xyz}" rpy="${chassis_rpy}"/>
      <mass value="4.0"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>

    <collision name="chassis_collision">
      <origin xyz="${chassis_xyz}" rpy="${chassis_rpy}"/>
     <geometry>
       <box size="0.50 0.30 0.07"/>
     </geometry> 
    </collision>

    <visual>
      <origin xyz="${chassis_visual_xyz}" rpy="${chassis_rpy}"/>
      <geometry>
        <box size="0.50 0.30 0.07"/>
      </geometry>
      <material name="red"/>
    </visual>

  <!-- Caster wheel -->
    <collision>
      <origin xyz="${caster_xyz}" rpy="${caster_rpy}"/>
      <geometry>
        <sphere radius="${castor_wheel_size}"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <visual>
      <origin xyz="${caster_xyz}" rpy="${caster_rpy}"/>
      <geometry>
        <sphere radius="${castor_wheel_size}"/>
      </geometry>
    </visual>

  </link>
  <!-- wheels -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="${right_xyz}" rpy="${right_rpy}"/>
      <mass value="${side_wheel_mass}"/>
      <inertia ixx="0.0005267" ixy="0.0" ixz="0.0" iyy="0.00053" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="${right_xyz}" rpy="${right_rpy}"/>
      <geometry>
        <cylinder radius="${side_wheel_radius}" length="${side_wheel_length}"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="${right_xyz}" rpy="${right_rpy}"/>
      <geometry>
        <cylinder radius="${side_wheel_radius}" length="${side_wheel_length}"/>
      </geometry>
    </collision>
  </link>

   <link name="left_wheel">
    <inertial>
      <origin xyz="${left_xyz}" rpy="${left_rpy}"/>
      <mass value="${side_wheel_mass}"/>
      <inertia ixx="0.0005267" ixy="0.0" ixz="0.0" iyy="0.00053" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="${left_xyz}" rpy="${left_rpy}"/>
      <geometry>
        <cylinder radius="${side_wheel_radius}" length="${side_wheel_length}"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="${left_xyz}" rpy="${left_rpy}"/>
      <geometry>
        <cylinder radius="${side_wheel_radius}" length="${side_wheel_length}"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_left_wheel" type="continuous">
    <origin xyz="${left_xyz}" rpy="${left_rpy}"/>
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <axis xyz="${axis_xyz}" rpy='${axis_rpy}'/>
    <limit effort="10000.0" velocity="1000.0"/>
    <joint_properties damping='1.0' friction='1.0'/>
  </joint>

  <joint name="joint_right_wheel" type="continuous">
    <origin xyz="${right_xyz}" rpy="${right_rpy}"/>
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <axis xyz="${axis_xyz}" rpy='${axis_rpy}'/>
    <limit effort="10000.0" velocity="1000.0"/>
    <joint_properties damping='1.0' friction='1.0'/>
  </joint>



</robot>
